{
  "version": 2,
  "builds": [
    { "src": "backend/index.js", "use": "@vercel/node" },
    { "src": "frontend/index.html", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/backend/index.js" }
  ]
}
